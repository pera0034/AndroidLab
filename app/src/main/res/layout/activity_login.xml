<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="27dp"
    android:layout_marginBottom="27dp"
    android:layout_marginLeft="48dp"
    android:layout_marginRight="48dp">

    <RelativeLayout
        android:id="@+id/profile1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your email address:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/text1EmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView1"
            android:hint="Type email here"
            android:inputType="textEmailAddress"
            android:textSize="20dp"
            android:nextFocusDown="@id/item1"
            android:nextFocusUp="@id/item2"
            android:nextFocusRight="@id/item3"
            android:nextFocusLeft="@id/item4"
            />

        <TextView
            android:id="@+id/textEmailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1EmailAddress"
            android:text="Type your password:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/textEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textEmailLabel"
            android:layout_marginTop="6dp"
            android:inputType="textPassword"
            android:nextFocusDown="@id/item1"
            android:nextFocusUp="@id/item2"
            android:nextFocusRight="@id/item3"
            android:nextFocusLeft="@id/item4" />

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textEmail"
            android:text="LOGIN"
            android:nextFocusDown="@id/item1"
            android:nextFocusUp="@id/item2"
            android:nextFocusRight="@id/item3"
            android:nextFocusLeft="@id/item4"/>

    </RelativeLayout>

</RelativeLayout>